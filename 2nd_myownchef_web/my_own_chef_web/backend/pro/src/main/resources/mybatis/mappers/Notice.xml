<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moc.pro.notice.dao.NoticeDAO">
    
    <!-- NoticeVO resultMap -->
    <resultMap id="NoticeResultMap" type="com.moc.pro.notice.vo.NoticeVO">
        <id property="noticeId" column="NOTICE_ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="noticeTitle" column="NOTICE_TITLE"/>
        <result property="noticeContent" column="NOTICE_CONTENT"/>
        <result property="createdAt" column="CREATED_AT"/>
        <result property="createdBy" column="CREATED_BY"/>
        <result property="updatedAt" column="UPDATED_AT"/>
        <result property="updatedBy" column="UPDATED_BY"/>
        <result property="userNickname" column="USER_NICKNAME"/>
    </resultMap>
    
    <!-- 공지사항 목록 조회 (페이징) -->
    <select id="selectList" parameterType="map" resultMap="NoticeResultMap">
        SELECT 
            n.NOTICE_ID,
            n.USER_ID,
            n.NOTICE_TITLE,
            n.NOTICE_CONTENT,
            n.CREATED_AT,
            n.CREATED_BY,
            n.UPDATED_AT,
            n.UPDATED_BY,
            u.USER_NICKNAME
        FROM TB_NOTICE n
        LEFT JOIN TB_USER u ON n.USER_ID = u.USER_ID
        ORDER BY n.CREATED_AT DESC
        OFFSET #{offset} ROWS FETCH NEXT #{limit} ROWS ONLY
    </select>
    
    <!-- 전체 공지사항 수 -->
    <select id="selectTotalCount" resultType="int">
        SELECT COUNT(*) FROM TB_NOTICE
    </select>
    
    <!-- 상세 조회 -->
    <select id="selectById" parameterType="int" resultMap="NoticeResultMap">
        SELECT 
            n.NOTICE_ID,
            n.USER_ID,
            n.NOTICE_TITLE,
            n.NOTICE_CONTENT,
            n.CREATED_AT,
            n.CREATED_BY,
            n.UPDATED_AT,
            n.UPDATED_BY,
            u.USER_NICKNAME
        FROM TB_NOTICE n
        LEFT JOIN TB_USER u ON n.USER_ID = u.USER_ID
        WHERE n.NOTICE_ID = #{noticeId}
    </select>
    
    <!-- 공지사항 작성 -->
    <insert id="insertNotice" parameterType="com.moc.pro.notice.vo.NoticeVO">
        INSERT INTO TB_NOTICE (
            USER_ID,
            NOTICE_TITLE,
            NOTICE_CONTENT,
            CREATED_BY
        ) VALUES (
            #{userId},
            #{noticeTitle},
            #{noticeContent},
            #{userId}
        )
    </insert>
    
    <!-- 공지사항 수정 -->
    <update id="updateNotice" parameterType="com.moc.pro.notice.vo.NoticeVO">
        UPDATE TB_NOTICE
        SET NOTICE_TITLE = #{noticeTitle},
            NOTICE_CONTENT = #{noticeContent},
            UPDATED_AT = SYSTIMESTAMP,
            UPDATED_BY = #{userId}
        WHERE NOTICE_ID = #{noticeId}
    </update>
    
    <!-- 공지사항 삭제 -->
    <delete id="deleteNotice" parameterType="int">
        DELETE FROM TB_NOTICE
        WHERE NOTICE_ID = #{noticeId}
    </delete>
    
</mapper>
